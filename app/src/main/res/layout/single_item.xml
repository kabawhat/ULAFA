<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragment.AddLostItemsFragment">


    <androidx.cardview.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:id="@+id/single_item_linear_parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView


                    android:id="@+id/single_item_image_item_count"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/single_item_text_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="username "
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/single_item_text_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="20/20/20202020202020202020202020202020 "
                        android:textAllCaps="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white"
                        android:textStyle="bold|normal" />


                    <TextView
                        android:id="@+id/single_item_text_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:drawableLeft="@drawable/ic_white_baseline_phone_24"
                        android:gravity="center"
                        android:text="080123456789"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/white"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>


            </LinearLayout>


            <TextView

                android:id="@+id/single_item_text_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:text="this is the title"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textStyle="bold">

            </TextView>


            <ImageView
                android:id="@+id/single_item_imageView_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxHeight="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image_available"></ImageView>

            <TextView
                android:id="@+id/single_item_text_desc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_margin="8dp"
                android:text="this is the this is the lenghty descirptions sir"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:textStyle="bold">

            </TextView>


            <LinearLayout
                android:id="@+id/single_item_linear_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/single_item_linear_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_camera_enhance_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Add Image"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/single_item_linear_messages_linear"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView


                        android:id="@+id/blog_single_item_comment_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_message_24"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView


                        android:id="@+id/single_item_txt_messages_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="0 Message"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                        android:textColor="@android:color/black"

                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/single_item_linear_delete_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView


                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_close_24"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Remove Post"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:id="@+id/single_item_linear_unknown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="visible"
                android:weightSum="2">


                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/single_item_linear_call_post_unknown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView


                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_local_phone_24"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Call Owner"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout

                    android:gravity="center"
                    android:id="@+id/single_item_linear_messages_linear_unknown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView


                        android:id="@+id/blog_single_item_comment_icon_unkown"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_message_24"
                        tools:ignore="VectorDrawableCompat" />


                    <TextView


                        android:id="@+id/single_item_txt_messages_counter_unknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="0 message"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </LinearLayout>





            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Click on Item For more Option"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>