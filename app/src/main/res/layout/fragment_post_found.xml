<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AddLostItemsFragment">


    <androidx.cardview.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/udus"
                android:layout_width="match_parent"
                android:layout_height="100dp"></ImageView>

            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                android:text="All item found should be submit to the security division after posting to enable owner to claim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@color/white"
                android:imeOptions="actionNext"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/found_edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_menu_book_24_primary"
                    android:drawablePadding="3dp"
                    android:hint="Enter Short Description?"
                    android:imeOptions="actionNext"
                    android:maxLines="4"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>


<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="56dp"-->
<!--                android:layout_margin="4dp"-->
<!--                android:background="@color/white"-->
<!--                android:imeOptions="actionDone"-->
<!--                app:boxBackgroundColor="@color/white">-->

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/found_edit_phoneNumber"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"-->
<!--                    android:drawablePadding="3dp"-->
<!--                    android:hint="your phone number"-->
<!--                    android:imeOptions="actionDone"-->
<!--                    android:inputType="phone"-->
<!--                    android:maxLines="1"-->
<!--                    android:singleLine="true" />-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->


            <Button

                android:id="@+id/found_btn_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Post Found Online"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white" />

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>